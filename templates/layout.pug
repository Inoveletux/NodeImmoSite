html
    head
        link(rel='stylesheet', href='/styles/css.css')
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous")
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" integrity="sha512-HK5fgLBL+xu6dm/Ii3z4xhlSUyZgTT9tuc/hSrtw6uzJOvgRr2a9jyxxT1ely+B+xFAmJKVSTbpM/CuL7qxO8w==" crossorigin="anonymous")

        script(src=process.env.BROWSER_REFRESH_URL)
    body
        block menu
            div(id="divMenu")
                img(src="/images/imoLogo.jpg")
                ul(id="ulMenu")
                    li.nav-item.active 
                        a.nav-link(href="/") Accueil 
                    if session.user 
                        li.nav-item
                            a.nav-link(href='/deconnexion') Se d√©connecter                       
                    else
                        li.nav-item
                            a.nav-link(href='/register') Inscription
                        li.nav-item
                            a.nav-link(href='/login') Connexion

        - var messages = getMessages()
            if messages.notify
                each msg in messages.notify
                    .alert.alert-info= msg
            if messages.error
                each msg in messages.error
                    .alert.alert-danger= msg


        block content
